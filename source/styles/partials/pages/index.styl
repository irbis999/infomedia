html, body
  height 100%
  box-sizing border-box

section.main.index
  //vh не используем из-за того что это 100vh это больше чем вьюпорт в моб браузерах
  height 100%
  min-height 520px
  box-sizing border-box
  position relative
  overflow hidden
  .wrapper
    position absolute
    left 50%
    top 50%
    width 900px
    height 900px
    margin -450px 0 0 -450px
    //Блок с бекграундом
    .bg
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background no-repeat 50% 0 / 900px
      transition opacity 1.5s
      opacity 1
      &.__transparent
        opacity 0
      &.__1
        background-image image-url('main/bg-1.jpg?ver=1')
      &.__2
        background-image image-url('main/bg-2.jpg?ver=1')
      &.__3
        background-image image-url('main/bg-3.jpg?ver=1')
    //Круг
    .circle
      width 215px
      height @width
      position absolute
      left 50%
      top 50%
      margin -54px 0 0 -105px
      background white
      border-radius 50%
      text-align center
      box-sizing border-box
      transition all .5s
      .logo
        width 145px
        height 27px
        margin 65px 0 10px 0
      .phone
        color color-grey
        font-weight bold
        text-decoration none
        line-height 1.1
        a
          color inherit
          text-decoration none
      .mail
        color #953d85
        text-decoration none
        font-weight bold
      .close
        display none
      .form
        display none
      .thanx
        display none
      //Открытый круг
      &.__active
        width 500px
        height @width
        margin -210px 0 0 -250px
        padding-top 20px
        .close
          width 35px
          height @width
          cursor pointer
          position absolute
          left 350px
          top 10px
          z-index 2
          display inline-block
        .thanx
          width 215px
          font-size 1.1em
          margin 3em auto 0 auto
          &.__form-sent
            display block
        .form
          width 215px
          margin 3em auto 0 auto
          .form-group
            margin-bottom .6em
            .form-input
              box-sizing border-box
              padding 0
              width 100%
              font-size .85em
              color color-grey
              outline none
              border none
            .form-input::-webkit-input-placeholder
              opacity 1
              color color-grey
            .form-input::-moz-placeholder
              opacity 1
              color color-grey
            .form-line
              height 2px
              background linear-gradient(to right, #633389, #c12077 70%)
    //Кнопка
    .button
      top 50%
      left 50%
      margin 190px 0 0 -107px
      position absolute
      width 214px
      color white
      font-weight bold
      text-transform uppercase
      background-image linear-gradient(to right, #633389, #d60a85 60%)
      font-size .8em
      text-align center
      padding 1em 0
      cursor pointer
      border none
  @media (min-width mup)
    .wrapper
      width 1920px
      height 1080px
      margin -540px 0 0 -960px
      .bg
        background no-repeat 50% 0
        &.__1
          background-image image-url('main/bg-desktop-1.jpg?ver=2')
        &.__2
          background-image image-url('main/bg-desktop-2.jpg?ver=2')
        &.__3
          background-image image-url('main/bg-desktop-3.jpg?ver=2')
      //Круг
      .circle
        width 260px
        height @width
        margin -130px 0 0 -125px
        .logo
          width 176px
          height 32px
          margin 85px 0 10px 0
        .phone
          font-size 1.2em
        .mail
          font-size 1.2em
        //Открытый круг
        &.__active
          width 760px
          height @width
          margin -380px 0 0 -375px
          padding-top 70px
          .close
            width 42px
            height @width
            left 660px
            top 130px
          .thanx
            width 260px
            margin-top 4em
            font-size 1.2em
          .form
            margin-top 6em
            width 260px
            .form-group
              margin-bottom 1em
              .form-input
                font-size 1em
      .button
        font-size 1em
        width 260px
        margin 200px 0 0 -130px
        background-repeat no-repeat
        background-position 0
        position relative
        span
          position relative
          z-index 2
        &::before
          opacity 0
          content ''
          position absolute
          left 0
          top 0
          width 100%
          height 100%
          z-index 1
          background linear-gradient(to right, #9c1094, #a349d3)
          transition opacity .3s
        &:hover
          &::before
            opacity 1


